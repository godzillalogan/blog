<div class="container">
  <h1 class="mb-4">Blog Articles</h1>
  <a href="/articles/new" class="btn btn-success">New Article</a>
  {{#articles}}
    <div class="card mt-4">
      <div class="card-body">
        <h4 class="card-title">{{this.title}}</h4>
        <div class="car-subtitle text-muted mb-2">
          {{dateFormat this.createdAt}}
        </div>
        <div class="card-text mb-2">
          {{this.description}}
        </div>
        <a href="/articles/{{this._id}}" class="btn btn-primary">
          Read MORE
        </a>
        <a href="/articles/edit/{{this._id}}" class="btn btn-info text-white">
          EDIT
        </a>
        <form action="/articles/{{this._id}}?_method=DELETE" method="post" class="d-inline">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  {{/articles}}
</div>