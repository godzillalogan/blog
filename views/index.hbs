<body>
  {{> header}}

<!-- Main Site start-->  
  <main id="site-main">
    <!-- Blog Post Section -->
      <section id="posts">
        <div class="container">
          <div class="grid">
            <!-- articles start-->
              {{#articles}}
              <div class="grid-item">
                <article class="article">
                  <div class="card-index">
                    <div class="overflow-img">
                      <a href="/articles/{{this._id}}">
                        <img src="{{noImage this.image}}" class="img-fluid" alt="">
                      </a>
                    </div>
                    <div class="card-body text-center px-1">
                      <a href="/articles/{{this._id}}" class="text-title dsiplay-1 text-dark">
                        {{this.title}} 
                      </a>
                      <p class="secondary-title text-secondary display-3">
                        <span><i class="far fa-clock text-primary"></i>{{dateFormat this.createdAt}}</span>
                        {{!-- <span><i class="far fa-comments text-primary"></i>12</span> --}}
                      </p>
                    </div>
                  </div>
                </article>
              </div>
               {{/articles}}
            <!-- articles end-->
          </div>
          {{!-- <div class="text-center">
            <button class="btn btn-primary secondary-title text-light">Load More Post</button>
          </div> --}}
        </div>
      </section>
    <!-- Blog Post Section end-->
      <!-- Swiper Slider start-->
    <section class="slider">
      <div class="container">
        <!-- Slider main container -->
        <div class="swiper">
          <!-- Additional required wrapper -->
          <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper-slide">
              <a href="#">
                <img src="./assets/slider/img1.jpg" class="img-fluid" alt="">
              </a>
            </div>
          </div>
        
        </div>
      </div>
    </section>
  <!-- Swiper Slider end-->



  </main>
  <!-- Main Site end-->



