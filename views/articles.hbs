              <h2 class="blog-title">{{this.title}}</h2>
              <p class="excerpt">{{this.description}}</p>
              <div class="blog-cta">
                <a href="/articles/{{this._id}}" class="button">Read more</a>
                {{!-- <button class="share-button"><i class="fas fa-share-alt"></i></button> --}}
              </div>
            </div>
          </div>
        </div>
        {{/articles}}
      </div>
      <div class="col-4">
              <aside id="sidebar" class="px-1 mt-3">
                  <!-- categories -->
                  <section class="categories">
                    <h2 class="text-center text-dark mb-3">Categories</h2>
                    {{#each categories}}
                    <a href="/articles/filter/{{this.categoryEnName}}" class="d-flex justify-content-center text-dark" {{#ifCond this.categoryEnName ../currentCategory}}style="background-color: var(--secondary);color:var(--light)"{{/ifCond}}>
                      <span>{{this.categoryName}}</span>
                      {{!-- <span>5</span> --}}
                    </a>
                    {{/each}}
                  </section>
              </aside>
        </div>
    </div>
  </section>

