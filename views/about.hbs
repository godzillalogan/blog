<body>

  {{> header}}

  {{#each users}}
  <section class="container">
    <h1 class="d-flex justify-content-center">About</h1>
    <div class="cover">
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d3/Fischotter%2C_Lutra_Lutra.JPG/640px-Fischotter%2C_Lutra_Lutra.JPG" alt="" class="userBackgroundImg">
    </div>
    <span class="avatar m-2 d-flex justify-content-center">
      <img src="{{this.avatar}}" alt="" class="rounded-circle userProfileImg">
    </span>
    <div class="d-flex justify-content-center">
      <h2 class="profile-name">{{this.name}}</h2>
    </div>
    <div class="d-flex justify-content-center">
      <p class="profile-introduction">{{this.introduction}}
      </p>
    </div>
  </section>
  {{/each}}

  <script type="text/javascript" src="src/purify.js"></script>
  <script src="https://kit.fontawesome.com/8209e1d203.js" crossorigin="anonymous"></script>
</body>