<div class="row grid">
  <div>
    <nav class="userSidebar fixed mt-3">
      <div class="buttonList mt-5">
        <div class="navItem index d-flex mb-4">
          <div class="icon d-flex align-items-center color-blue">
            <i class="fas fa-home my-auto"></i>
          </div>
          <a href="/admin/articles" class="btn">
            <span class="fs-5 fw-bolder color-blue">文章清單</span>
          </a>
        </div>
        <div class="navItem userProfile d-flex mb-4">
          <div class="icon d-flex align-items-center">
            <i class="fas fa-users"></i>
          </div>
          <a href="/admin/users" class="btn">
            <span class="fs-5 fw-bolder">使用者列表</span>
          </a>
        </div>
        <a href="/admin/logout" class="btn">
          <span class="fs-5 fw-bolder">登出</span>
        </a>
      </div>
    </nav>
  </div>

  <div class=" mainSection">
    {{!-- {{> message}} --}}
    <div class="title border d-flex justify-content-between">
      <h5 class="fw-bolder m-3">文章清單</h5>
      <a href="/admin/articles/new" class="btn btn-link">
        <i class="fas fa-plus fa-2x" style="color:#657786"></i>
      </a>
    </div>

    <div class="articles border-top border-5">
      {{#each articles}}
      <div class="border">
        <div class="d-flex">
          <div class="col-10 px-3">
            <div class="d-flex">
              <span class="fw-bold mt-2">
                <a href="/articles/{{this._id}}" class="btn"> 
                  {{this.title}}&nbsp;
                </a>
              </span>
              <span class="text-secondary mt-3">{{dateFormat this.createdAt}}</span>
            </div>
            <div class="mt-1 ms-3">
              <p>{{this.description}}</p>
            </div>
          </div>
          <div class="col-1 d-flex align-items-center">
             <a href="/admin/articles/edit/{{this._id}}" class="btn btn-link">
              <i class="fas fa-edit fa-2x" style="color:#657786"></i>
             </a>
          </div>
          <div class="col-1 d-flex align-items-center">
            <form action="/admin/articles/{{this._id}}?_method=DELETE" method="POST" style="display: inline;"
              onclick="return confirm('確定要刪除這筆推文嗎？')">
              <button type="submit" class="btn btn-link" style="color:#657786">
                <i class="fas fa-times fa-2x"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>